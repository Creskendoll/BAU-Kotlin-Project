<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp" tools:srcCompat="@drawable/fui_idp_button_background_anonymous"
        android:src="@drawable/fui_idp_button_background_anonymous"
        android:id="@+id/playerBg"
        android:alpha="0.2" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView android:id="@+id/profileAvatar"
               android:layout_width="match_parent"
               android:layout_height="120dp"
               android:layout_alignParentStart="true"
               android:layout_alignParentEnd="true"
               android:layout_centerVertical="true"
               android:src="@mipmap/ic_first_avatar" tools:srcCompat="@mipmap/ic_first_avatar"
               android:layout_marginTop="32dp"
               app:layout_constraintTop_toTopOf="@+id/playerBg" app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="@+id/playerBg"/>

    <Button
            android:text="Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playBtn"
            android:width="200dp" android:height="80dp"
            app:layout_constraintTop_toBottomOf="@+id/playerBg"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/leadersBtn"/>
    <Button
        android:id="@+id/leadersBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp" android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp" android:width="200dp"
        android:height="80dp" android:text="Leaders"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/playerBg"/>

    <Button
        android:id="@+id/signOutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
        android:width="200dp" android:height="80dp"
        android:text="Sign Out" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leadersBtn"/>


    <TextView
            android:textColor="@color/blackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nickNameTxt"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/profileAvatar" android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="@+id/playerBg" app:layout_constraintStart_toStartOf="@+id/playerBg"
            android:layout_marginStart="8dp"/>
    <TextView
            android:textColor="@color/blackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scoreTxt"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/playerBg" android:layout_marginBottom="16dp"
            android:layout_marginTop="25dp" app:layout_constraintTop_toTopOf="@+id/nickNameTxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="120dp"/>
    <TextView
            android:text=""
            android:textColor="@color/blackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/highscoreTxt"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/playerBg" android:layout_marginBottom="16dp"
            android:layout_marginTop="25dp" app:layout_constraintTop_toTopOf="@+id/nickNameTxt"
            app:layout_constraintEnd_toEndOf="@+id/playerBg" app:layout_constraintStart_toStartOf="@+id/playerBg"
            android:layout_marginStart="120dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>