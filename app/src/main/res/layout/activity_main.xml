<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="270dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
        android:src="@color/common_google_signin_btn_text_dark"
        android:id="@+id/playerBg"
        android:alpha="0.2" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:layout_width="match_parent"
        android:src="@mipmap/ic_first_avatar"
        android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
        android:id="@+id/profileImg" android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="@+id/playerBg" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/playerBg"/>

    <Button
            android:text="Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playBtn"
            android:width="200dp" android:height="80dp"
            android:layout_marginTop="120dp" app:layout_constraintTop_toBottomOf="@+id/playerBg"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/leadersBtn"/>
    <Button
        android:id="@+id/leadersBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginBottom="120dp"
        android:width="200dp" android:height="80dp" android:layout_marginTop="20dp"
        android:text="Leaders" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playBtn"
    />

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nickNameTxt"
            app:layout_constraintTop_toBottomOf="@+id/profileImg" android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="@+id/playerBg" app:layout_constraintStart_toStartOf="@+id/playerBg"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scoreTxt"
            app:layout_constraintBottom_toBottomOf="@+id/playerBg" android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/nickNameTxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="100dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/highscoreTxt"
            app:layout_constraintBottom_toBottomOf="@+id/playerBg" android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/nickNameTxt"
            app:layout_constraintEnd_toEndOf="@+id/playerBg" app:layout_constraintStart_toStartOf="@+id/playerBg"
            android:layout_marginStart="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>